<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-heroestoo.png", height: 100 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Home", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "About", about_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "What We Do", whatwedo_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Contact Us", "#footer-contact", class: "navbar-wagon-item navbar-wagon-link" %>


      <!-- Avatar with dropdown menu -->
      <button type="button" class="btn btn-primary btn-translation">中</button>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Home", root_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "About", about_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "What We Do", whatwedo_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Contact Us", "#footer-contact", class: "navbar-wagon-item navbar-wagon-link" %>
      <button type="button" class="btn btn-primary btn-translation">中</button>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

